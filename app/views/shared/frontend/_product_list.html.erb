<section class="product_list section">
  
    <section class="container">
      
      <div class="columns is-multiline"> <!-- columns表示要做多欄式；is-multiline表示欄位到底時 自動換行 -->

        <% products.each do |product|  %>
        
        
          <div class="column is-4"> <!-- Bulma總共12欄，4表示佔頁面寬度4/12 -->
            <div class="card product-item is-shadowless">
              <div class="card-image">
                <figure class="image">
                  <%= link_to product do %>
                    <!-- product_path(product) 可簡寫為 product -->
                    <!-- product   GET    /products/:id(.:format)       products#show -->
                    <%= image_tag product.cover_image.variant(resize: '430x290'),alt: '商品圖片' if product.cover_image.attached? %>
                  <% end %>
                </figure>
              </div>
              <div class="card-content">
                <div class="content">
                  <h4 class="is-size-6"><%= product.vendor.title %></h4>
                  <p><%= link_to product.name, product, class: 'has-text-dark' %></p>
                  <!-- product_path(product) 可簡寫為 product -->
                  <!-- product   GET    /products/:id(.:format)       products#show -->
                </div>
              </div>
            </div>
          </div>
        <% end %>

      </div>

    </section>
  </section>