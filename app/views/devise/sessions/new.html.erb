<!-- 會員登入頁面 -->

<section class="container">
  <!-- Bulma的container會有一點margin空間 -->
  <div class="columns">
    <div class="column is-9">
      <%= image_tag 'https://images.unsplash.com/photo-1595511890410-3b8dc237a537?q=80&w=1380&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D', alt: '登入圖片' %>
    </div>
    <div class="column is-3">  
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, class: 'label' %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
        </div>

        <div class="field">
          <%= f.label :password, '密碼', class: 'label' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "登入", class: 'button is-primary is-medium' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>  
</section>


